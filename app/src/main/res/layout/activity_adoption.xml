<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adoption"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/adp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adoption"
            android:layout_marginTop="50dp"
            android:textColor="@color/purple_200"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/descrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="with more adoptable pets than ever,we have an urgent need for pet adopters
.Search for dogs,cats,and other available pets for adoption near you."
            android:layout_marginTop="120dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginLeft="15dp"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/pet1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:srcCompat="@drawable/chat"
                android:background="@color/white"
                />
            <ImageButton
                android:id="@+id/pet2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:srcCompat="@drawable/chien2"
                android:layout_marginLeft="40dp"
                android:background="@color/white" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/email1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="17dp"
                app:srcCompat="@drawable/email"
                android:layout_marginRight="15dp"/>
